<%= form_for Post.new(:recipient => @user) do |f| %>
	<%= f.hidden_field :recipient_id %>
	<%= f.text_area :content %>
	<%= f.submit("Create Post") %>
<%- end -%>

<ul>
	<%- @user.received_posts.order("created_at DESC").each do |post| -%>
		<li>
			<%= post.content -%> - <%= link_to post.user.name, post.user %> <small>(posted <%= distance_of_time_in_words_to_now(post.created_at) %> ago)</small>
		</li>
	<%- end -%>
</ul>